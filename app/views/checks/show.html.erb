 <h2 class="col s4 center-align"> Payroll for <%= @pay_date.strftime("Period ending %m.%d.%y")%>  </h2>
<hr width=85%>
<div class="container">
    <%=form_tag "/payrolls/#{@payroll.id}/payperiods" do -%>
    <table class = "centered highlight responsive-table">
    <thead>
        <tr>
            <th> First Name</th>
            <th> Last Name</th>
            <th> Regular Hours</th>
            <th> Overtime </th>
        </tr>
    </thead>
        <% @employees.each do |info| %>
            <tbody>
                <tr>
                    <td> <%= info.first_name.capitalize %> </td>
                    <td> <%= info.last_name.capitalize %> </td>
                    <td colspan="1"> <%= number_field_tag "[payroll][#{info.id}][reg_hours]" %></td>
                    <td> $<%= (info.rate) *1.0 %> </td>
                    <td colspan="1"> <%= number_field_tag "[payroll][#{info.id}][ovr_hours]" %></td>
                    <td> $<%=(info.rate) *1.5 %></td>
                </tr>
        <% end %>
        <tr> 
            <td colspan="6"><%=submit_tag "Submit Payroll", :class=>"btn-right cyan accent-3", data: {confirm: "Payroll cannot be changed once processed, please confirm that all information is correct before proceeding"} %> </td>
            
        </tr>
            </tbody>
    </table>
    <%end -%>
</div>