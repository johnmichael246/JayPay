<h2 class="col s4"> Employee Overview </h2>
<hr width=85%>
<div class="container">
    <a href="/employees/new" class="waves-effect waves-light btn green right">&plus; Employee</a>
    <table class = "bordered centered responsive-table">
    <thead>
        <tr>
            <th> First Name</th>
            <th> Last Name</th>
            <th> Pay Rate</th>
            <th> Pay By </th>
            <th> Status </th>
        </tr>
    </thead>
        <% @employees.each do |emp| %>
            <tbody>
                <tr>
                    <td> <%= emp.first_name %> </td>
                    <td> <%= emp.last_name %> </td>
                    <td> $<%= emp.rate %> </td>
                    <td> <%= emp.paid_by %> </td>
                    <td> <% if emp.status == true %>
                            <%=emp.status = 'active' %>
                            <%else%> 
                            <%=emp.status = 'inactive' %>
                        <%end%></td>
                    <td><%=link_to edit_employee_path(emp), :class=>"waves-effect waves-light btn-flat btn-small" do%>
                        <i class="material-icons">mode_edit</i>
                    <%end%>
                    </td>
                    <td><%=link_to emp, :class=>"waves-effect waves-light btn-flat btn-small", method: :delete, data: {confirm: "WARNING! Employees should be archived with status-inactive, deleting an employee will erase all records of the employee"} do%>
                        <i class="material-icons">delete_forever</i>
                    <%end%>
                    </td>
                </tr>
            </tbody>
        <% end %>
</table>
</div>
</div>