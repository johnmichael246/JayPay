
<h2 class="col s4"> Add Employee </h2>
<hr width=85%>
<%= form_for @employee do |f| %>
    <% if @employee.errors.any? %>
        <div class="error-messages">
            <h2>Uh-Oh!</h2>
            <ul>
                <% for message in @employee.errors.messages %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s3 offset-s1"><a href="#t1" class="active">Information</a></li>
                <li class="tab col s3"><a href="#t2">Employment</a></li>
                <li class="tab col s3"><a href="#t3">Taxes & Exemptions</a></li>
            </ul>
        </div>
        <div id="t1" class="col s12">
            </br>
            <div class="input-field col s2 offset-s3">
                <%= f.label :first_name,:class=>"active" %>
                <%= f.text_field :first_name %>
            </div>
            <div class="input-field col s2" >
                <%= f.label :middle_i,:class=>"active" %>
                <%= f.text_field :middle_i %>
            </div>
            <div class="input-field col s2">
                <%= f.label :last_name,:class=>"active" %>
                <%= f.text_field :last_name %>
            </div>
            <div class="input-field col s6 offset-s3">
                <%= f.label :street_address,:class=>"active" %>
                <%= f.text_field :street_address %>
            </div>
            <div class="input-field col s3 offset-s3">
                <%= f.label :city,:class=>"active" %>
                <%= f.text_field :city %>
            </div>
            <div class="input-field col s1">
                <%= f.label :zipcode,:class=>"active" %>
                <%= f.text_field :zipcode %>
            </div>
            <div class="input-field col s2">
                <%= f.label :state,:class=>"active" %>
                <%= f.select :state, options_for_select(["CA","OR","AZ","NY"]) %>
            </div>
            <div class="input-field offset-s4 col s2">
                    <%= f.label :gender,:class=>"active" %>
                    <%= f.select :state, options_for_select(["Male","Female"]) %>
            </div>
            <div class="input-field col s2 offset-s1">
                <%= f.label :birthday,:class=>"active" %>
                <%= f.date_field :birthday %>
            </div>
        </div>
        <div id="t2" class="col s12">
            </br>
            <div class="input-field offset-s3 col s2">
                <%= f.label :work_location,:class=>"active" %>
                <%= f.text_field :work_location %>
            </div>
            <div class="input-field col s2" id="work">
                <%= f.label :workers_comp_class,:class=>"active" %>
                <%= f.text_field :workers_comp_class %>
            </div>
            <div class="input-field col s2">
                <%= f.label :id_number,:class=>"active" %>
                <%= f.text_field :id_number %>
            </div>
            <div class="input-field col s2 offset-s3">
                <%= f.label :hire_date,:class=>"active" %>
                <%= f.date_field :hire_date %>
            </div>
            <div class="input-field col s2 offset-s2">
                <%= f.label :status,:class=>"active" %>
                <%= f.select :status, options_for_select([true, false]) %>
            </div>
        </div>
        <div id="t3" class="col s12">
            </br>
            <div class="input-field col s2 offset-s3">
                <%= f.label :jobtype,:class=>"active" %>
                <%= f.select :jobtype, options_for_select(["General Manager","Manager","PIC","Bartender","Server","Host","Expo","Driver"]) %>
            </div>
            <div class="input-field col s2">
                <%= f.label :rate,:class=>"active" %>
                <%= f.number_field :rate %>
            </div>
            <div class="input-field col s2">
                <%= f.label :paid_by,:class=>"active" %>
                <%= f.text_field :paid_by %>
            </div>
            <div class="input-field col s2 offset-s3">
                <%= f.label :social_security_number,:class=>"active" %>
                <%= f.number_field :social_security_number %>
            </div>
            <div class="input-field col s2">
                <%= f.label :federal_filing_status,:class=>"active" %>
                <%= f.number_field :federal_filing_status %>
            </div>
            <div class="input-field col s2">
                <%= f.label :federal_filing_allowances,:class=>"active" %>
                <%= f.number_field :federal_filing_allowances %>
            </div>
            <div class="input-field col s2 offset-s5">
                <%= f.label :state_filing_status,:class=>"active" %>
                <%= f.number_field :state_filing_status %>
            </div>
            <div class="input-field col s2">
                <%= f.label :state_filing_allowances,:class=>"active" %>
                <%= f.number_field :state_filing_allowances %>
            </div>
            <div class= "col s2 pull-s4">
            </br></br></br></br>
                <%=button_tag "Add", :class=>"waves-effect waves-light btn", :type=>"Submit" %> 
            </div>
        </div>
    </div>
<%end%>